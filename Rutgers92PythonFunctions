#Task 1: Basic Function
def New_York_Mets():
    print("New York Mets")
New_York_Mets()

#Task 2: Function with a Parameter
def greet(first_name):
    print("Hi, Thomas")
greet("first_name")

#Task 3: FUnction with Multiple Parameters
def area(width, length):
    return width * length
area(5,10)

#Task 4: Function with Default Parameter Values
def power(base, exponent=2):
    return base ** exponent
print(power(10))
print(power(4))

#Task 5: Function that returns a value
def get_me_full_name(first,middle,last):
    return first + " " + middle + " " + last
print(get_me_full_name("Thomas", "Ernest", "Elgrim"))

#Task 6: Function Composition
def cel_to_fahr(cel):
    return cel * 9/5 +32
def fahr_to_cel(fahr):
    return (fahr - 32) * 5/9
print (cel_to_fahr(20))
print (fahr_to_cel(60))

#Task 7: Combining Functions and Conditionals
def grade_score(score):
    if score > 90:
        return "Great"
    elif score > 80 < 89:
        return "Good"
    elif score > 70 < 79:
        return "OK"
    else: 
        return "Bad"
print(grade_score(95))
